// fast campus 강의
// https://www.acmicpc.net/problem/11055
// 1

#include <iostream>
#include <algorithm>

using namespace std;

int N;
int A[1001];
int dp[1001];

int main() {
    cin >> N;
    for (int i = 0; i < N; i++) {
        cin >> A[i];
        dp[i] = A[i];
    }

    for (int i = 1; i < N; i++) {
        for (int j = 0; j < i; j++) {
            if (A[i] > A[j])
                dp[i] = max(dp[i], dp[j] + A[i]);
        }
    }

    cout << *max_element(dp, dp + N);
}